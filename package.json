{
  "name": "pnpm-ts-react-example-monorepo",
  "private": true,
  "version": "1.0.3",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "pnpm -r --parallel start",
    "build": "pnpm -r build",
    "test": "meta-updater --test && pnpm -r --parallel test",
    "format-check": "prettier --check --ignore-path .gitignore sites/ packages/",
    "format": "npm run format-check -- --write",
    "lint": "npm run format-check && eslint \"packages/*/src/**/*\" \"sites/*/src/**/*\"",
    "clean": "pnpm -r exec -- rm -rf node_modules",
    "changeset-status": "changeset status --since=origin/main",
    "changeset-version": "node .changeset/pre-changelog.mjs && changeset version && node .changeset/post-changelog.mjs && pnpm install",
    "changeset-publish": "pnpm publish --filter='./packages/**' --no-git-checks --access public && git tag v$(cat ./package.json | jq -r .version) && git push --follow-tags",
    "changeset-publish-dummy": "git tag v$(cat ./package.json | jq -r .version) && git push --follow-tags && echo \"should-release=true\" >> $GITHUB_OUTPUT"
  },
  "devDependencies": {
    "@pnpm/meta-updater": "^0.0.6",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "@changesets/cli": "^2.17.0",
    "@changesets/get-github-info": "^0.5.2",
    "@svitejs/changesets-changelog-github-compact": "^1.1.0",
    "gray-matter": "^4.0.3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  }
}